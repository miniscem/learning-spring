<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="triangle" class="com.markminisce.common.objectdi.Triangle">
		<property name="a" ref="point1" />
		<property name="b" ref="point2" />
		<property name="c" ref="point3" /> 
	</bean>
	
	<!-- property "injector" example -->
	<!-- note: setter necessary in the target class -->
	<bean id="point1" class="com.markminisce.common.objectdi.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="point2" class="com.markminisce.common.objectdi.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="point3" class="com.markminisce.common.objectdi.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>
</beans>