<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="triangle" class="com.markminisce.common.objectdi.Triangle" name="triangl-alias-2">
		<property name="a" ref="point1" />
		
		<!-- inner beans for isolation from rest of application -->
		<property name="b">
			<bean class="com.markminisce.common.objectdi.Point">
				<property name="x" value="-20" />
				<property name="y" value="0" />
			</bean>		
		</property>
		<property name="c">
			<bean class="com.markminisce.common.objectdi.Point">
				<property name="x" value="20" />
				<property name="y" value="0" />
			</bean>	
		</property>
	</bean>
	<alias name="triangle" alias="triangle-alias-1"/>
	
	<!-- property "injector" example -->
	<!-- note: setter necessary in the target class -->
	<bean id="point1" class="com.markminisce.common.objectdi.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
</beans>