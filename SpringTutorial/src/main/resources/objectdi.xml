<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="triangle" class="com.markminisce.common.objectdi.Triangle" 
			name="triangle-alias-1"
			autowire="byName">		
	</bean>
		
	<!-- property "injector" example -->
	<!-- note: setter necessary in the target class -->
	<bean id="pointA" class="com.markminisce.common.objectdi.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="pointB" class="com.markminisce.common.objectdi.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>	
	
	<bean id="pointC" class="com.markminisce.common.objectdi.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>	
</beans>